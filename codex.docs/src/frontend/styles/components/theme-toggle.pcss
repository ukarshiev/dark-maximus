/**
 * Theme Toggle Button - CSS Only Solution
 * Переключатель темы без JavaScript (основная логика в CSS)
 * JavaScript используется только для сохранения выбора пользователя
 */

.docs-theme-toggle {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  position: relative;
  width: 40px;
  height: 40px;
  padding: 0;
  margin: 0;
  border: none;
  background: transparent;
  cursor: pointer;
  border-radius: 8px;
  transition: background-color 0.2s ease;
  color: var(--color-text-main);

  @apply --squircle;

  /* Скрываем checkbox */
  &__input {
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;
    margin: 0;
    padding: 0;
  }

  /* Контейнер для иконок */
  &__icon {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    color: var(--color-text-main);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;

    svg {
      width: 100%;
      height: 100%;
      display: block;
    }

    /* Иконка солнца (светлая тема) */
    &--sun {
      opacity: 1;
      transform: scale(1) rotate(0deg);
    }

    /* Иконка луны (темная тема) */
    &--moon {
      opacity: 0;
      transform: scale(0.8) rotate(-90deg);
    }
  }

  /* Hover эффект */
  &:hover {
    background-color: var(--color-link-hover);
  }

  &:hover &__icon {
    transform: scale(1.1);
  }

  /* Active эффект */
  &:active {
    transform: scale(0.95);
  }

  /* Focus для accessibility */
  &:focus-within {
    outline: none;
  }

  &:focus-within &__icon {
    outline: 2px solid var(--color-link-active);
    outline-offset: 2px;
    border-radius: 4px;
  }

  /* Когда checkbox checked (темная тема) */
  &__input:checked ~ &__icon--sun {
    opacity: 0;
    transform: scale(0.8) rotate(90deg);
  }

  &__input:checked ~ &__icon--moon {
    opacity: 1;
    transform: scale(1) rotate(0deg);
  }

  /* Анимация при переключении */
  &__input:checked ~ &__icon {
    animation: themeToggle 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }
}

/* Анимация переключения темы */
@keyframes themeToggle {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.3) rotate(180deg);
  }
  100% {
    transform: scale(1) rotate(360deg);
  }
}

/* Темная тема - стили для переключателя */
[data-theme="dark"] .docs-theme-toggle {
  color: var(--color-text-main);

  &:hover {
    background-color: var(--color-link-hover);
  }

  &__icon {
    color: var(--color-text-main);
  }
}

/* Адаптивность для мобильных устройств */
@media (--mobile) {
  .docs-theme-toggle {
    width: 36px;
    height: 36px;

    &__icon {
      width: 20px;
      height: 20px;
    }
  }
}

/* Стили для header menu item */
.docs-header__menu-theme {
  display: inline-flex;
  align-items: center;
  list-style: none;
  margin: 0;
  padding: 0;
}

